<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.hslu.mobpro.proj.thinkquick">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.GameActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.HighscoreActivity" />
        <activity android:name=".activities.PointsDistributionActivity" />
        <activity android:name=".activities.CountdownActivity" />
        <activity android:name=".activities.GameOverActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".activities.MainActivity" />

        <activity android:name=".activities.GameModeActivity"></activity>
    </application>

</manifest>